<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle Configuration -->
    <key>CFBundleDevelopmentRegion</key>
    <string>es</string>
    <key>CFBundleDisplayName</key>
    <string>IntervalPro</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- UI Configuration -->
    <key>UILaunchScreen</key>
    <dict/>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UIRequiresFullScreen</key>
    <false/>

    <!-- HealthKit Privacy Descriptions -->
    <key>NSHealthShareUsageDescription</key>
    <string>IntervalPro necesita acceso a tus datos de frecuencia cardíaca para mostrarte métricas en tiempo real durante tu entrenamiento y analizar tu progreso.</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>IntervalPro guardará tus entrenamientos en la app Salud para que puedas ver tu historial completo de ejercicio.</string>

    <!-- Bluetooth Privacy Descriptions -->
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>IntervalPro usa Bluetooth para conectarse a tu Garmin Fenix y recibir datos de frecuencia cardíaca, velocidad y ritmo en tiempo real.</string>
    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>IntervalPro usa Bluetooth para conectarse a tu Garmin Fenix y recibir datos de frecuencia cardíaca, velocidad y ritmo en tiempo real.</string>

    <!-- Location Privacy (for GPS backup) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>IntervalPro usa tu ubicación durante el entrenamiento para calcular distancia y ritmo cuando el GPS de Garmin no está disponible.</string>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
        <string>bluetooth-central</string>
        <string>location</string>
    </array>

    <!-- Spotify Integration -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>spotify</string>
    </array>

    <!-- URL Schemes for OAuth callbacks -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.intervalpro.app</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>intervalpro</string>
            </array>
        </dict>
    </array>

    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>
</dict>
</plist>
